<p id="notice"><%= notice %></p>

<h1>Listing Highlights</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @highlights.each do |highlight| %>
      <tr>
        <td><%= highlight.name %></td>
        <td><%= highlight.description %></td>
        <td><%= highlight.store %></td>
        <td><%= link_to 'Show', crawl_store_highlight_path(@crawl, @store, highlight) %></td>
        <td><%= link_to 'Edit', edit_crawl_store_highlight_path(@crawl, @store, highlight) %></td>
        <td><%= link_to 'Destroy', crawl_store_highlight_path(@crawl, @store, highlight), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Highlight', new_crawl_store_highlight_path(@crawl, @store) %>
