<p id="notice"><%= notice %></p>

<h1>Listing Stores</h1>

<table>
  <thead>
    <tr>
      <th>Store service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.store_service_id %></td>
        <td><%= link_to 'Show', crawl_store_path(@crawl, store) %></td>
        <td><%= link_to 'Edit', edit_crawl_store_path(@crawl, store) %></td>
        <td><%= link_to 'Destroy', crawl_store_path(@crawl, store), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_crawl_store_path(@crawl) %>
